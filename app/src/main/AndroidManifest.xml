<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nisithmondaltechnology.unitnumberandcurrencyallconverter">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/app_id_for_admob" />

        <activity
            android:name="com.nisithmondaltechnology.unitnumberandcurrencyallconverter.HelpActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name="com.nisithmondaltechnology.unitnumberandcurrencyallconverter.AboutAppActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nisithmondaltechnology.unitnumberandcurrencyallconverter.GeneralHistoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nisithmondaltechnology.unitnumberandcurrencyallconverter.PressureConverterActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.nisithmondaltechnology.unitnumberandcurrencyallconverter.FrequencyConverterActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.nisithmondaltechnology.unitnumberandcurrencyallconverter.TimeConverterActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.nisithmondaltechnology.unitnumberandcurrencyallconverter.SpeedConverterActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.nisithmondaltechnology.unitnumberandcurrencyallconverter.NumberSystemConverterActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.nisithmondaltechnology.unitnumberandcurrencyallconverter.WeightConverterActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.nisithmondaltechnology.unitnumberandcurrencyallconverter.AngleConverterActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.nisithmondaltechnology.unitnumberandcurrencyallconverter.TemperatureConverterActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.nisithmondaltechnology.unitnumberandcurrencyallconverter.VolumeConverterActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.nisithmondaltechnology.unitnumberandcurrencyallconverter.AreaConverterActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.nisithmondaltechnology.unitnumberandcurrencyallconverter.LengthConverterActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.nisithmondaltechnology.unitnumberandcurrencyallconverter.AllCurrencyNameActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.nisithmondaltechnology.unitnumberandcurrencyallconverter.CurrencyActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>

        <activity android:name="com.nisithmondaltechnology.unitnumberandcurrencyallconverter.StartingActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>